{
  "name": "api",
  "scripts": {
    "start": "concurrently npm:build:watch npm:server",
    "build:watch": "rollup -w -c rollup.config.js",
    "server": "firebase emulators:start --import=seed",
    "build": "rimraf ./dist/**/* && rollup -c rollup.config.js",
    "deploy": "firebase deploy --only functions",
    "export": "firebase emulators:export seed"
  },
  "engines": {
    "node": "16"
  },
  "type": "module",
  "main": "dist/index.js",
  "dependencies": {
    "express": "^4.17.3",
    "firebase-admin": "^10.1.0",
    "firebase-functions": "^3.20.1",
    "got": "^12.0.4",
    "rollup": "^2.70.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-typescript": "^8.3.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "private": true
}
