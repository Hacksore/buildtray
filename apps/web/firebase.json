{
  "hosting": {
    "predeploy": [
      "npm run build"
    ],
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "ui": {
      "enabled": true
    },
    "hosting": {
      "enabled": true,
      "port": "8080"
    }
  }
}
